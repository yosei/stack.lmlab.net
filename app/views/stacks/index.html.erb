<p id="notice"><%= notice %></p>

<h1>Listing Stacks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Url1</th>
      <th>Url2</th>
      <th>Url3</th>
      <th>Picture1</th>
      <th>Picture2</th>
      <th>Picture3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stacks.each do |stack| %>
      <tr>
        <td><%= stack.title %></td>
        <td><%= stack.content %></td>
        <td><%= stack.url1 %></td>
        <td><%= stack.url2 %></td>
        <td><%= stack.url3 %></td>
        <td><%= stack.picture1 %></td>
        <td><%= stack.picture2 %></td>
        <td><%= stack.picture3 %></td>
        <td><%= link_to 'Show', stack %></td>
        <td><%= link_to 'Edit', edit_stack_path(stack) %></td>
        <td><%= link_to 'Destroy', stack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

